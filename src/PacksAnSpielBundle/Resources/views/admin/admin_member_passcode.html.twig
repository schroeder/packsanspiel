{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block title %}
    Pack's An Spiel
{% endblock %}

{% block page_title %}Teilnehmer Passcode Generieren
{% endblock %}
{% block page_subtitle %}
{% endblock %}

{% block flash_messages %}
    Test
{% endblock %}


{% block page_content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Teilnehmerliste</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid"
                               aria-describedby="example1_info">
                            <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    aria-sort="ascending"
                                    aria-label="Rendering engine: activate to sort column descending"
                                    style="width: 296px;">Vorname
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    aria-label="Browser: activate to sort column ascending" style="width: 361px;">
                                    Name
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    aria-label="Browser: activate to sort column ascending" style="width: 361px;">
                                    Passcode
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    aria-label="Platform(s): activate to sort column ascending" style="width: 321px;">
                                    Stufe
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    aria-label="Engine version: activate to sort column ascending"
                                    style="width: 256px;">Team
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                    style="width: 190px;">
                                    Aktionen
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for member in member_list %}
                                <tr role="row"
                                    class="{% if loop.index is divisibleby(2) %}even{% else %}odd{% endif %}">
                                    <td class="sorting_1">{{ member.name }}</td>
                                    <td>{{ member.firstName }}</td>
                                    <td>{% if member.passcode %}{{ member.passcode }}{% endif %}</td>
                                    <td>{{ member.grade }}</td>
                                    <td>{% if member.team %}{{ member.team.passcode }}{% endif %}</td>
                                    <td>
                                        <a role="button" class="btn btn-info"
                                           href="{{ path('admin_generate_member_passcode', {'id': member.id }) }}">
                                            <span class="glyphicon glyphicon-qrcode" aria-hidden="true"></span>
                                        </a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th rowspan="1" colspan="1">Rendering engine</th>
                                <th rowspan="1" colspan="1">Browser</th>
                                <th rowspan="1" colspan="1">Platform(s)</th>
                                <th rowspan="1" colspan="1">Engine version</th>
                                <th rowspan="1" colspan="1">CSS grade</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing 1
                            to {{ limit }}
                            of {{ member_list|length() }} entries
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                            {{ knp_pagination_render(member_list) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}
